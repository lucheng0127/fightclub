/* Filter Bar Component Styles */
.filter-bar {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.filter-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-input {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
}

.filter-input.small {
  flex: 0 0 200rpx;
}

.filter-placeholder {
  color: #999;
}

.filter-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.btn-filter,
.btn-clear {
  flex: 1;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: none;
}

.btn-filter {
  background-color: #1a1a1a;
  color: #fff;
}

.btn-clear {
  background-color: #f5f5f5;
  color: #666;
}
