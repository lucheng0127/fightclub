/* Fight Club - Global Styles */

/* Reset */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  color: #333;
}

/* Container */
.container {
  padding: 20rpx;
}

/* Common button styles */
.btn-primary {
  background-color: #1a1a1a;
  color: #fff;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

.btn-secondary {
  background-color: #fff;
  color: #1a1a1a;
  border: 2rpx solid #1a1a1a;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

/* Card styles */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* Text styles */
.text-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.text-subtitle {
  font-size: 28rpx;
  color: #666;
}

.text-desc {
  font-size: 24rpx;
  color: #999;
}

/* Input styles */
.input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

/* Loading */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}
