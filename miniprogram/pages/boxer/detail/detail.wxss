/* Boxer Detail Page Styles */

.container {
  min-height: 100vh;
  background: #1a1a1a;
  padding: 32rpx;
}

/* Loading */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
  color: #999;
}

/* Profile */
.profile {
  padding-bottom: 120rpx;
}

/* Header */
.header {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  margin-bottom: 32rpx;
  border-bottom: 1rpx solid #333;
}

.boxer-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #333;
  margin-right: 24rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.gender {
  font-size: 28rpx;
  color: #999;
}

/* Section */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
}

/* Info List */
.info-list {
  background: #2a2a2a;
  border-radius: 16rpx;
  padding: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #333;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  font-size: 28rpx;
  color: #999;
}

.info-item .value {
  font-size: 28rpx;
  color: #fff;
}

/* Record Card */
.record-card {
  display: flex;
  justify-content: space-around;
  background: #2a2a2a;
  border-radius: 16rpx;
  padding: 40rpx 24rpx;
}

.record-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.record-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.record-item.wins .record-value {
  color: #4CAF50;
}

.record-item.losses .record-value {
  color: #f44336;
}

.record-item.draws .record-value {
  color: #FFC107;
}

.record-label {
  font-size: 24rpx;
  color: #999;
}

/* Actions */
.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #1a1a1a;
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn.secondary {
  background: #2a2a2a;
  color: #999;
}

/* Empty */
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.create-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}
