/* 拳手档案创建页样式 */
.container {
  min-height: 100vh;
  background-color: #1a1a1a;
  padding: 40rpx 30rpx;
}

.header {
  margin-bottom: 60rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #888888;
}

.form {
  background-color: #2a2a2a;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background-color: #1a1a1a;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #ffffff;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 80rpx;
  background-color: #1a1a1a;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.picker-text {
  font-size: 28rpx;
  color: #ffffff;
}

.record-section {
  margin-bottom: 40rpx;
}

.record-inputs {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.record-item {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #1a1a1a;
  border-radius: 8rpx;
  padding: 0 16rpx;
  height: 80rpx;
}

.record-label {
  font-size: 24rpx;
  color: #888888;
  margin-right: 12rpx;
}

.record-input {
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
}

.submit-section {
  margin-top: 60rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #4CAF50;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #ffffff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background-color: #444444;
  color: #888888;
}

.submit-btn::after {
  border: none;
}
