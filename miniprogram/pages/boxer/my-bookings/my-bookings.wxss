/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
}

.nav-bar-content {
  position: relative;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-bar-title {
  font-size: 17px;
  font-weight: 600;
}

.nav-bar-back {
  position: absolute;
  left: 16px;
  font-size: 24px;
  color: #333;
}

/* 状态切换 */
.status-tabs {
  position: fixed;
  top: calc(var(--nav-bar-height) + 44px);
  left: 0;
  right: 0;
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  z-index: 99;
}

.status-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 26rpx;
  color: #666;
  position: relative;
}

.status-tab.active {
  color: #1890ff;
  font-weight: 600;
}

.status-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

/* 加载状态 */
.loading {
  padding: 200rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty {
  padding: 200rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 48rpx;
}

.empty-btn {
  background-color: #1890ff;
  color: #fff;
  border-radius: 48rpx;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 48rpx;
  font-size: 28rpx;
}

/* 列表 */
.list {
  padding: 24rpx 32rpx;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 预约卡片 */
.gym-info {
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.gym-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.gym-address {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.address-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.slot-info {
  margin-bottom: 16rpx;
}

.slot-date {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.date-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.date-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-badge.active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-badge.cancelled {
  background-color: #f5f5f5;
  color: #999;
}

.slot-time {
  display: flex;
  align-items: center;
}

.time-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.time-text {
  font-size: 28rpx;
  color: #666;
}

/* 倒计时 */
.deadline {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: #fff7e6;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.deadline-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.deadline-text {
  font-size: 24rpx;
  color: #fa8c16;
}

.deadline-text.deadline-expired {
  color: #ff4d4f;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 0;
  text-align: center;
}

.detail-btn {
  background-color: #f0f9ff;
  color: #1890ff;
  border: none;
}

.cancel-btn {
  background-color: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.cancel-btn[disabled] {
  background-color: #f5f5f5;
  color: #ccc;
  border-color: #eee;
}
