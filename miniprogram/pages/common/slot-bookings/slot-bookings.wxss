/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
}

.nav-bar-content {
  position: relative;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-bar-title {
  font-size: 17px;
  font-weight: 600;
}

.nav-bar-back {
  position: absolute;
  left: 16px;
  font-size: 24px;
  color: #333;
}

/* 加载状态 */
.loading {
  padding: 200rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 内容 */
.content {
  padding: 24rpx 32rpx;
}

/* 区块 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.count {
  font-size: 26rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 时间段信息 */
.slot-info-card {
  text-align: center;
  padding: 0;
}

.slot-gym {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.slot-date {
  font-size: 36rpx;
  font-weight: 700;
  color: #1890ff;
  margin-bottom: 12rpx;
}

.slot-time {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.slot-capacity {
  font-size: 28rpx;
  color: #52c41a;
}

/* 空状态 */
.empty {
  padding: 80rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 拳手列表 */
.boxers-list {
  padding: 0;
}

.boxer-card {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.boxer-card:last-child {
  border-bottom: none;
}

.boxer-avatar {
  font-size: 56rpx;
  margin-right: 24rpx;
}

.boxer-info {
  flex: 1;
}

.boxer-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.boxer-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
}

.boxer-gender {
  font-size: 28rpx;
}

.boxer-gender.male {
  color: #1890ff;
}

.boxer-gender.female {
  color: #ff4d4f;
}

.boxer-details {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.detail-item {
  margin-right: 24rpx;
}

.booking-time {
  font-size: 24rpx;
  color: #999;
}

.time-label {
  margin-right: 8rpx;
}

/* 拳馆操作 */
.gym-actions {
  margin-top: 32rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
}
