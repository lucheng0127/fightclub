/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
}

.nav-bar-content {
  position: relative;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-bar-title {
  font-size: 17px;
  font-weight: 600;
}

.nav-bar-back {
  position: absolute;
  left: 16px;
  font-size: 24px;
  color: #333;
}

.nav-bar-action {
  position: absolute;
  right: 16px;
  font-size: 14px;
  color: #1890ff;
}

/* 加载状态 */
.loading {
  padding: 200rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty {
  padding: 200rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 列表 */
.list {
  padding: 24rpx 32rpx;
}

.card {
  position: relative;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card.read {
  opacity: 0.7;
}

.card.unread {
  background-color: #f0f9ff;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-type {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background-color: #e6f7ff;
  border-radius: 8rpx;
}

.card-type.new_booking {
  background-color: #f6ffed;
}

.card-type.cancelled_booking {
  background-color: #fff1f0;
}

.type-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.type-text {
  font-size: 24rpx;
  color: #666;
}

.card-time {
  font-size: 24rpx;
  color: #999;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.unread-dot {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #ff4d4f;
  border-radius: 50%;
}
