/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 200rpx;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
}

.nav-bar-content {
  position: relative;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-bar-title {
  font-size: 17px;
  font-weight: 600;
}

.nav-bar-back {
  position: absolute;
  left: 16px;
  font-size: 24px;
  color: #333;
}

/* 加载状态 */
.loading {
  padding: 200rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 内容 */
.content {
  padding: 24rpx 32rpx;
}

/* 区块 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.count {
  font-size: 26rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 拳馆卡片 */
.gym-card {
  padding: 0;
}

.gym-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.gym-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.info-text {
  font-size: 28rpx;
  color: #666;
}

/* 时间段卡片 */
.slot-card {
  padding: 0;
}

.slot-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.slot-row:last-child {
  border-bottom: none;
}

.slot-label {
  font-size: 28rpx;
  color: #666;
}

.slot-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-badge.available {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-badge.full {
  background-color: #fff1f0;
  color: #ff4d4f;
}

/* 预约列表 */
.bookings-list {
  padding: 0;
}

.boxer-card {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.boxer-card:last-child {
  border-bottom: none;
}

.boxer-avatar {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.boxer-info {
  flex: 1;
}

.boxer-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.boxer-details {
  font-size: 24rpx;
  color: #999;
}

.boxer-details text {
  margin-right: 16rpx;
}

.boxer-gender {
  font-size: 32rpx;
}

.boxer-gender.male {
  color: #1890ff;
}

.boxer-gender.female {
  color: #ff4d4f;
}

/* 操作按钮 */
.actions {
  margin-top: 32rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.book-btn {
  background-color: #1890ff;
  color: #fff;
}

.book-btn[disabled] {
  background-color: #d9d9d9;
  color: #999;
}

.cancel-btn {
  background-color: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.cancel-btn[disabled] {
  background-color: #f5f5f5;
  color: #999;
  border-color: #d9d9d9;
}

.view-btn {
  background-color: #fff;
  color: #1890ff;
  border: 1rpx solid #1890ff;
}
