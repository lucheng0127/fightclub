<!-- Dashboard Page -->
<view class="dashboard-page">
  <!-- 自定义导航栏 -->
  <view class="custom-nav-bar" style="padding-top: {{statusBarHeight}}px;">
    <view class="nav-content">
      <!-- 左上角切换角色按钮 -->
      <view class="nav-left-btn" bindtap="onSwitchRole">
        <text class="nav-icon">⇋</text>
      </view>
    </view>
  </view>

  <view class="dashboard-container" style="padding-top: calc(32rpx + {{statusBarHeight}}px + 44px);">
    <!-- 档案信息 -->
    <view class="user-section">
      <image class="user-avatar" src="{{profileAvatar}}" mode="aspectFill" />
      <view class="user-info">
        <text class="user-name">{{profileName}}</text>
      </view>
    </view>

    <!-- 统计信息 -->
    <view class="stats-section">
      <view class="stat-card" bindtap="goToBoxerList">
        <text class="stat-value">{{boxerCount}}</text>
        <text class="stat-label">拳手</text>
      </view>
      <view class="stat-card" bindtap="goToGymList">
        <text class="stat-value">{{gymCount}}</text>
        <text class="stat-label">拳馆</text>
      </view>
    </view>

    <!-- 功能入口 -->
    <view class="actions-section">
      <view class="action-item" bindtap="goToBoxerList">
        <view class="action-icon">🥊</view>
        <text class="action-text">浏览拳手</text>
      </view>
      <view class="action-item" bindtap="goToGymList">
        <view class="action-icon">🏢</view>
        <text class="action-text">浏览拳馆</text>
      </view>
      <view class="action-item" bindtap="goToProfile">
        <view class="action-icon">👤</view>
        <text class="action-text">我的档案</text>
      </view>
    </view>
  </view>
</view>
