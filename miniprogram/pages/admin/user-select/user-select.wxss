/* User Select Page */
.user-select-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
}

/* Header */
.header {
  margin-bottom: 32rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999999;
}

/* Search Bar */
.search-bar {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #ffffff;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}

.search-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.search-clear {
  font-size: 28rpx;
  color: #999999;
}

.search-button {
  font-size: 28rpx;
  color: #667eea;
}

.search-hint {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

/* User List */
.user-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.list-scroll {
  flex: 1;
  height: 100%;
}

.user-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* Avatar */
.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: #333;
  flex-shrink: 0;
}

.user-avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.avatar-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
}

.user-id {
  font-size: 26rpx;
  color: #999999;
  font-family: monospace;
}

.user-time {
  font-size: 24rpx;
  color: #666666;
}

/* Loading */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* Empty State */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
}

/* Load More */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}

.load-text {
  font-size: 28rpx;
  color: #666666;
}
