/* Review Detail Styles */
.review-detail-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

.detail-container {
  padding: 30rpx;
}

.status-bar {
  text-align: center;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.status-pending {
  background: #fff3e0;
}

.status-approved {
  background: #e8f5e9;
}

.status-rejected {
  background: #ffebee;
}

.status-text {
  font-size: 28rpx;
  font-weight: bold;
}

.status-pending .status-text {
  color: #ff9800;
}

.status-approved .status-text {
  color: #4caf50;
}

.status-rejected .status-text {
  color: #f44336;
}

.info-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  width: 150rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
}

.reject-reason {
  color: #f44336;
}

.reject-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.reject-input {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-approve,
.btn-reject {
  flex: 1;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-approve {
  background: #4caf50;
  color: white;
}

.btn-reject {
  background: #f44336;
  color: white;
}
