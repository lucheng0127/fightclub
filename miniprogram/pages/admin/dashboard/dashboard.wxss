/* Admin Dashboard Styles */
.admin-dashboard-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.dashboard-container {
  padding: 30rpx;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.menu-card {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  position: relative;
}

.menu-icon {
  font-size: 56rpx;
  margin-right: 24rpx;
}

.menu-info {
  flex: 1;
}

.menu-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.menu-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.menu-badge {
  background: #ff4757;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  min-width: 40rpx;
  text-align: center;
}

.badge-text {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.exit-section {
  margin-top: 60rpx;
}

.btn-exit {
  background: white;
  color: #ff4757;
  border: 2rpx solid #ff4757;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.loading-container {
  text-align: center;
  padding: 100rpx 0;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}
