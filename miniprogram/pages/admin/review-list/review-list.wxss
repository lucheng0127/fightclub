/* Review List Styles */
.review-list-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #eee;
}

.filter-picker {
  display: flex;
  align-items: center;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
}

.filter-value {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: bold;
  margin: 0 8rpx;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999;
}

.filter-count {
  font-size: 24rpx;
  color: #999;
}

.review-list {
  padding: 24rpx 30rpx;
}

.review-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.review-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.gym-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  flex: 1;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.status-pending {
  background: #fff3e0;
  color: #ff9800;
}

.status-approved {
  background: #e8f5e9;
  color: #4caf50;
}

.status-rejected {
  background: #ffebee;
  color: #f44336;
}

.review-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.review-footer {
  display: flex;
  justify-content: flex-end;
}

.submit-time {
  font-size: 22rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.load-more {
  text-align: center;
  padding: 30rpx;
}

.load-text {
  font-size: 26rpx;
  color: #666;
}
