/* Admin Manage Page */
.admin-manage-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  padding: 40rpx 32rpx;
}

.container {
  max-width: 640rpx;
  margin: 0 auto;
}

/* Header */
.header {
  margin-bottom: 48rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999999;
}

/* Loading */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* Add Section */
.add-section {
  margin-bottom: 32rpx;
}

.btn-add {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-add::after {
  border: none;
}

.btn-add[disabled] {
  opacity: 0.6;
}

/* Admin List */
.admin-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.admin-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.admin-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.admin-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.admin-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
}

.badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.badge-super {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #ffffff;
}

.badge-normal {
  background: rgba(102, 126, 234, 0.2);
  color: #667eea;
}

.badge-current {
  background: rgba(16, 185, 129, 0.2);
  color: #10b981;
}

.admin-time {
  font-size: 24rpx;
  color: #666666;
}

.btn-remove {
  padding: 16rpx 32rpx;
  background: rgba(239, 68, 68, 0.1);
  border-radius: 8rpx;
  color: #ef4444;
  font-size: 28rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
}
