/* 拳馆档案编辑页样式 */

.container {
  min-height: 100vh;
  background: #1a1a1a;
  padding: 32rpx;
  padding-bottom: 320rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.form {
  /* 移除 padding-bottom，使用 container 的 padding-bottom */
}

.form-item {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #2a2a2a;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #fff;
  box-sizing: border-box;
}

.location-section {
  display: flex;
  gap: 16rpx;
}

.location-input {
  flex: 1;
}

.location-btn {
  width: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  background: #2a2a2a;
  color: #999;
  font-size: 36rpx;
  border: none;
  border-radius: 12rpx;
  text-align: center;
}

.location-info {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.upload-section {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.icon-preview {
  width: 120rpx;
  height: 120rpx;
  background: #2a2a2a;
  border-radius: 16rpx;
}

.upload-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  background: #2a2a2a;
  color: #999;
  font-size: 28rpx;
  border: none;
  border-radius: 12rpx;
}

.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #1a1a1a;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.submit-btn.disabled {
  opacity: 0.5;
}

.cancel-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #2a2a2a;
  color: #999;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

/* City Picker */
.picker-input {
  width: 100%;
  height: 88rpx;
  background: #2a2a2a;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.picker-input-text {
  font-size: 28rpx;
  color: #fff;
}

.picker-input-text.placeholder {
  color: #666;
}

.picker-input-icon {
  font-size: 20rpx;
  color: #666;
}

.city-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.city-picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.city-picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #2a2a2a;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.city-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #333;
}

.city-picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.city-picker-close {
  font-size: 36rpx;
  color: #999;
  padding: 8rpx;
}

.city-picker-body {
  padding: 32rpx 0;
}

.city-picker-view {
  width: 100%;
  height: 400rpx;
}

.city-picker-view picker-view-column {
  display: flex;
  justify-content: center;
  align-items: center;
}

.city-picker-view picker-view-column view {
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}

.city-picker-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #333;
}

.city-picker-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.city-picker-btn-cancel {
  background-color: #1a1a1a;
  color: #999;
}

.city-picker-btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}
