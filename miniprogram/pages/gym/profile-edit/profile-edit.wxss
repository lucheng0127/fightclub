/* 拳馆档案编辑页样式 */

.container {
  min-height: 100vh;
  background: #1a1a1a;
  padding: 32rpx;
  padding-bottom: 320rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.form {
  /* 移除 padding-bottom，使用 container 的 padding-bottom */
}

.form-item {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #2a2a2a;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #fff;
  box-sizing: border-box;
}

.location-section {
  display: flex;
  gap: 16rpx;
}

.location-input {
  flex: 1;
}

.location-btn {
  width: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  background: #2a2a2a;
  color: #999;
  font-size: 36rpx;
  border: none;
  border-radius: 12rpx;
  text-align: center;
}

.location-info {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.upload-section {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.icon-preview {
  width: 120rpx;
  height: 120rpx;
  background: #2a2a2a;
  border-radius: 16rpx;
}

.upload-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  background: #2a2a2a;
  color: #999;
  font-size: 28rpx;
  border: none;
  border-radius: 12rpx;
}

.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #1a1a1a;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.submit-btn.disabled {
  opacity: 0.5;
}

.cancel-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #2a2a2a;
  color: #999;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}
