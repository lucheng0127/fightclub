/* Gym List Page Styles */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* Header */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 32rpx;
  color: #fff;
}

.stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

/* Filters - Horizontal Scroll */
.filters-scroll {
  background-color: #fff;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.filters-scroll-view {
  display: flex;
  flex-direction: row;
  padding: 0 32rpx;
  white-space: nowrap;
}

.filter-chip {
  display: inline-flex;
  align-items: center;
  height: 64rpx;
  padding: 0 24rpx;
  margin-right: 16rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  flex-shrink: 0;
}

.filter-chip-text {
  font-size: 26rpx;
  color: #333;
}

.filter-chip-icon {
  font-size: 20rpx;
  color: #999;
  margin-left: 8rpx;
}

.filter-chip-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.filter-chip-primary .filter-chip-text {
  color: #fff;
}

.filter-chip-primary .filter-chip-icon {
  color: rgba(255, 255, 255, 0.7);
}

.filter-chip-action {
  background-color: #ffebee;
}

.filter-chip-action .filter-chip-text {
  color: #f44336;
}

/* City Picker Modal */
.city-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.city-picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.city-picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.city-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.city-picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.city-picker-close {
  font-size: 36rpx;
  color: #999;
  padding: 8rpx;
}

.city-picker-body {
  padding: 32rpx 0;
}

.city-picker-view {
  width: 100%;
  height: 400rpx;
}

.city-picker-view picker-view-column {
  display: flex;
  justify-content: center;
  align-items: center;
}

.city-picker-view picker-view-column view {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.city-picker-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #eee;
}

.city-picker-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.city-picker-btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.city-picker-btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

/* List */
.list {
  padding: 24rpx 32rpx;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 24rpx;
}

.card-info {
  flex: 1;
}

.card-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.card-details {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx 32rpx;
  font-size: 24rpx;
  color: #666;
}

.card-detail-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.card-detail-item.distance {
  color: #667eea;
  font-weight: 500;
}

.card-boxers {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
}

/* Empty */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* Loading */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* Load More */
.load-more {
  display: flex;
  justify-content: center;
  padding: 24rpx;
  font-size: 28rpx;
  color: #999;
}

.load-more-btn {
  padding: 16rpx 48rpx;
  background-color: #fff;
  border-radius: 48rpx;
  border: none;
  color: #666;
}
