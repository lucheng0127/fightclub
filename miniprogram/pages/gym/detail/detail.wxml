<!-- 拳馆档案详情页 -->
<view class="container">
  <!-- 加载状态 -->
  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>

  <!-- 档案内容 -->
  <view class="profile" wx:if="{{!loading && profile}}">
    <!-- 头部信息 -->
    <view class="header">
      <image class="avatar" src="{{avatarUrl}}" mode="aspectFill" />
      <view class="info">
        <text class="name">{{profile.name}}</text>
      </view>
    </view>

    <!-- 基本信息 -->
    <view class="section">
      <text class="section-title">基本信息</text>
      <view class="info-list">
        <view class="info-item">
          <text class="label">地址</text>
          <view class="value-with-action">
            <text class="value address">{{profile.address || '未提供'}}</text>
            <view
              wx:if="{{profile.location && profile.location.latitude}}"
              class="location-icon-btn"
              bindtap="onViewLocation"
            >
              📍
            </view>
          </view>
        </view>
        <view class="info-item">
          <text class="label">联系电话</text>
          <text class="value">{{profile.phone}}</text>
        </view>
      </view>
    </view>

    <!-- 操作按钮 -->
    <view class="actions">
      <button class="action-btn primary" bindtap="onEdit" wx:if="{{isOwnProfile}}">编辑档案</button>
      <button class="action-btn secondary" bindtap="onBack">{{isOwnProfile ? '返回' : '返回列表'}}</button>
    </view>
  </view>

  <!-- 无档案提示 -->
  <view class="empty" wx:if="{{!loading && !profile}}">
    <text class="empty-text">未找到拳馆档案</text>
    <button class="create-btn" bindtap="onCreate">创建档案</button>
  </view>
</view>
