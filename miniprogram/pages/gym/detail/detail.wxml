<!-- 拳馆档案详情页 -->
<view class="container">
  <!-- 加载状态 -->
  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>

  <!-- 档案内容 -->
  <view class="profile" wx:if="{{!loading && profile}}">
    <!-- 头部信息 -->
    <view class="header">
      <image class="avatar" src="{{avatarUrl}}" mode="aspectFill" />
      <view class="info">
        <text class="name">{{profile.name}}</text>
        <text class="city" wx:if="{{profile.city}}">{{profile.city}}</text>
      </view>
    </view>

    <!-- 基本信息 -->
    <view class="section">
      <text class="section-title">基本信息</text>
      <view class="info-list">
        <view class="info-item">
          <text class="label">地址</text>
          <text class="value address">{{profile.address}}</text>
        </view>
        <view class="info-item" wx:if="{{profile.location}}">
          <text class="label">位置</text>
          <text class="value">
            {{profile.location.latitude.toFixed(6)}}, {{profile.location.longitude.toFixed(6)}}
          </text>
        </view>
        <view class="info-item">
          <text class="label">联系电话</text>
          <text class="value">{{profile.phone}}</text>
        </view>
      </view>
    </view>

    <!-- 操作按钮 -->
    <view class="actions">
      <button class="action-btn primary" bindtap="onEdit">编辑档案</button>
      <button class="action-btn secondary" bindtap="onBack">返回</button>
    </view>
  </view>

  <!-- 无档案提示 -->
  <view class="empty" wx:if="{{!loading && !profile}}">
    <text class="empty-text">未找到拳馆档案</text>
    <button class="create-btn" bindtap="onCreate">创建档案</button>
  </view>
</view>
