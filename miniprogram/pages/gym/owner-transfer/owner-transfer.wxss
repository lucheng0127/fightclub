/* 拳馆负责人转移页面样式 */

.transfer-page {
  min-height: 100vh;
  background: #1a1a1a;
  padding: 32rpx;
  padding-bottom: 180rpx;
}

/* Loading */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
  color: #999;
}

/* Section */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
}

/* Info Card */
.info-card {
  background: #2a2a2a;
  border-radius: 16rpx;
  padding: 24rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #333;
}

.info-row:last-child {
  border-bottom: none;
}

.info-row .label {
  font-size: 28rpx;
  color: #999;
}

.info-row .value {
  font-size: 28rpx;
  color: #fff;
}

.info-row .value.status-pending {
  color: #ff9800;
}

.info-row .value.status-approved {
  color: #4caf50;
}

.info-row .value.status-rejected {
  color: #f44336;
}

/* Recipient Card */
.recipient-card {
  background: #2a2a2a;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recipient-empty {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.recipient-empty .placeholder {
  font-size: 28rpx;
  color: #666;
}

.recipient-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.recipient-name {
  font-size: 28rpx;
  color: #fff;
}

.arrow {
  font-size: 40rpx;
  color: #666;
  font-weight: 300;
}

/* Tip */
.tip {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-top: 24rpx;
  padding: 20rpx;
  background: rgba(255, 152, 0, 0.1);
  border-radius: 12rpx;
  border-left: 4rpx solid #ff9800;
}

.tip-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #ff9800;
  line-height: 1.5;
}

/* Actions */
.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #1a1a1a;
  display: flex;
  gap: 16rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn.primary[disabled] {
  background: #333;
  color: #666;
}

.action-btn.secondary {
  background: #2a2a2a;
  color: #999;
}

/* Empty */
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
