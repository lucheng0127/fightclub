<!-- 拳馆负责人转移页面 -->
<view class="transfer-page">
  <!-- 加载状态 -->
  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>

  <!-- 转移内容 -->
  <view class="transfer-content" wx:if="{{!loading && gymProfile}}">
    <!-- 拳馆信息 -->
    <view class="section">
      <text class="section-title">拳馆信息</text>
      <view class="info-card">
        <view class="info-row">
          <text class="label">拳馆名称</text>
          <text class="value">{{gymProfile.name}}</text>
        </view>
        <view class="info-row">
          <text class="label">拳馆状态</text>
          <text class="value status-{{gymProfile.status}}">{{statusText}}</text>
        </view>
      </view>
    </view>

    <!-- 接收人信息 -->
    <view class="section">
      <text class="section-title">接收人</text>
      <view class="recipient-card" bindtap="onSelectRecipient">
        <view wx:if="{{!selectedRecipient}}" class="recipient-empty">
          <text class="placeholder">点击选择接收人</text>
          <text class="arrow">›</text>
        </view>
        <view wx:else class="recipient-info">
          <text class="recipient-name">{{selectedRecipient.nickname}}</text>
          <text class="arrow">›</text>
        </view>
      </view>
      <view class="tip" wx:if="{{selectedRecipient}}">
        <text class="tip-icon">⚠️</text>
        <text class="tip-text">转移后您将失去该拳馆的所有权,此操作不可撤销</text>
      </view>
    </view>

    <!-- 操作按钮 -->
    <view class="actions">
      <button
        class="action-btn primary"
        bindtap="onConfirmTransfer"
        disabled="{{!selectedRecipient || transferring}}"
      >
        {{transferring ? '转移中...' : '确认转移'}}
      </button>
      <button class="action-btn secondary" bindtap="onCancel">取消</button>
    </view>
  </view>

  <!-- 无档案提示 -->
  <view class="empty" wx:if="{{!loading && !gymProfile}}">
    <text class="empty-text">未找到拳馆档案</text>
  </view>
</view>
