/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
}

.nav-bar-content {
  position: relative;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-bar-title {
  font-size: 17px;
  font-weight: 600;
}

.nav-bar-back {
  position: absolute;
  left: 16px;
  font-size: 24px;
  color: #333;
}

/* 表单 */
.form {
  padding: 32rpx;
}

.form-group {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.form-picker {
  width: 100%;
}

.picker-value {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.placeholder {
  color: #999;
}

.picker-icon {
  color: #999;
  font-size: 24rpx;
}

/* 计数器 */
.counter {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 48rpx;
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
}

.counter-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #1890ff;
  color: #fff;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.counter-btn[disabled] {
  background-color: #d9d9d9;
  color: #999;
}

.counter-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  min-width: 80rpx;
  text-align: center;
}

.form-hint {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 提示信息 */
.tips {
  background-color: #fff7e6;
  border: 1rpx solid #ffd591;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 32rpx 0;
}

.tips-title {
  display: block;
  font-size: 26rpx;
  color: #fa8c16;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.tips-text {
  display: block;
  font-size: 24rpx;
  color: #fa8c16;
  line-height: 1.8;
}

/* 提交按钮 */
.submit-btn {
  background-color: #1890ff;
  color: #fff;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 48rpx;
}

.submit-btn[disabled] {
  background-color: #d9d9d9;
}
