/* Login Page Styles */
.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a1a 0%, #333 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-container {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  background-color: #fff;
  margin-bottom: 48rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 80rpx;
}

.auth-section {
  width: 100%;
  margin-bottom: 48rpx;
}

.btn-auth {
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  color: #1a1a1a;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-auth::after {
  border: none;
}

.btn-auth[disabled] {
  opacity: 0.6;
}

.tips {
  margin-top: 32rpx;
  padding: 0 24rpx;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.8;
  margin-bottom: 8rpx;
}

/* 昵称输入界面 */
.nickname-section {
  width: 100%;
}

.nickname-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
  text-align: center;
  margin-bottom: 48rpx;
}

.nickname-form {
  position: relative;
  width: 100%;
  margin-bottom: 48rpx;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  color: #fff;
  box-sizing: border-box;
}

.nickname-count {
  position: absolute;
  right: 32rpx;
  bottom: 16rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.btn-submit {
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  color: #1a1a1a;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-submit::after {
  border: none;
}

.btn-submit[disabled] {
  opacity: 0.4;
}

.location-section {
  width: 100%;
  padding: 32rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
}

.btn-location {
  width: 100%;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.btn-location::after {
  border: none;
}

.location-tip {
  text-align: center;
  padding: 16rpx;
}

.location-tip text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
